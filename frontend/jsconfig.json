{
  "compilerOptions": {
    "paths": {
      "@/*": ["./src/*"]
    }, 
    "target": "esnext",
    "module": "esnext",
    "moduleResolution": "node",
    "strict": true,
    "jsx": "preserve",
    "esModuleInterop": true,
    "lib": ["esnext", "dom"]
  },
  "include": ["src/**/*"], 
  "exclude": ["node_modules", "dist"]
}
